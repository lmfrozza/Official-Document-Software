    padding: 50
    Label:  
        text: 'Official Document Software'
        font_size: 20 
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Insira o caminho .docx'
                font_size: 14
                padding: 5
